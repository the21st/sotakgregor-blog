---
// Minimalist page header with name, socials, and avatar (avatar on right)
const AVATAR_SRC = "/saturn.png";
---

<header class="page-header">
  <div class="header-main">
    <div class="header-text">
      {
        Astro.props.homeLink ? (
          <h1 class="site-title">
            <a href="/">Šimon Soták Gregor</a>
          </h1>
        ) : (
          <h1 class="site-title">Šimon Soták Gregor</h1>
        )
      }
      <div class="social">
        <a
          href="https://www.linkedin.com/in/simon-sotak/"
          target="_blank"
          aria-label="LinkedIn"
        >
          <svg viewBox="0 0 24 24" aria-hidden="true" width="22" height="22"
            ><path
              fill="currentColor"
              d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3v10zm-1.5-11.3A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-10h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"
            ></path></svg
          >
        </a>
        <a
          href="https://github.com/the21st  "
          target="_blank"
          aria-label="GitHub"
        >
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none"
            ><path
              fill="currentColor"
              d="M12 2C6.477 2 2 6.484 2 12.021c0 4.426 2.865 8.184 6.839 9.504.5.092.682-.217.682-.483 0-.237-.009-.868-.013-1.703-2.782.605-3.369-1.342-3.369-1.342-.454-1.155-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.532 1.03 1.532 1.03.892 1.53 2.341 1.089 2.91.833.091-.647.35-1.09.636-1.341-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.025A9.564 9.564 0 0 1 12 6.844c.85.004 1.705.115 2.504.337 1.909-1.295 2.747-1.025 2.747-1.025.546 1.378.203 2.397.1 2.65.64.7 1.028 1.595 1.028 2.688 0 3.847-2.338 4.695-4.566 4.944.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.749 0 .268.18.579.688.481C19.138 20.2 22 16.447 22 12.021 22 6.484 17.523 2 12 2Z"
            ></path></svg
          >
        </a>
        <a href="https://x.com/the21nd/" target="_blank" aria-label="X">
          <svg viewBox="0 0 24 24" aria-hidden="true" width="22" height="22"
            ><path
              fill="currentColor"
              d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
            ></path></svg
          >
        </a>
      </div>
    </div>
    <div class="avatar">
      <img
        src={AVATAR_SRC}
        alt="Šimon Soták Gregor profile photo"
        class="profile-img"
        width="88"
        height="88"
      />
    </div>
  </div>
</header>
<style>
  .page-header {
    width: 100%;
    margin-bottom: 2.5rem;
    padding-top: 2.5rem;
    padding-bottom: 0.5rem;
  }
  .header-main {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2.2rem;
    margin: 0 auto;
  }
  .header-text {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    align-items: flex-start;
  }
  .site-title {
    font-size: 2rem;
    font-weight: 100;
    margin: 0;
    letter-spacing: -1px;
    color: var(--text);
    line-height: 1.1;
  }
  .site-title a {
    color: var(--text);
    text-decoration: none;
    transition: none;
  }
  .site-title a:hover,
  .site-title a:focus {
    color: var(--text);
    text-decoration: underline;
    cursor: pointer;
  }
  .social {
    display: flex;
    gap: 0.7rem;
    margin-top: 0.3rem;
    margin-bottom: 0.2rem;
  }
  .social a {
    color: var(--accent);
    opacity: 0.75;
    transition:
      color 0.2s,
      opacity 0.2s;
    font-size: 1.35rem;
  }
  .social a:hover {
    opacity: 1;
  }
  .avatar {
    width: 88px;
    height: 88px;
    border-radius: 50%;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-shadow: 0 4px 24px 0 #0004;
  }
  .profile-img {
    width: 88px;
    height: 88px;
    border-radius: 50%;
    object-fit: cover;
    display: block;
  }
  @media (max-width: 720px) {
    .header-main {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
    .avatar {
      margin-top: 0.7rem;
      margin-left: 0;
    }
  }
</style>

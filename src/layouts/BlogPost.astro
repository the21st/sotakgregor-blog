---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      :root {
        --bg: #181818;
        --bg-alt: #232323;
        --text: #f3f3f3;
        --accent: #ff6363;
        --accent-hover: #ffb347;
      }
      @media (prefers-color-scheme: light) {
        :root {
          --bg: #fff;
          --bg-alt: #f6f6f6;
          --text: #232323;
          --accent: #e14b1e;
          --accent-hover: #e8a94b;
        }
      }
      html, body {
        background: var(--bg);
        color: var(--text);
        font-family: 'Inter', sans-serif;
        margin: 0;
        padding: 0;
      }
      main {
        width: 100%;
        margin: 0;
        padding: 0;
      }
      .prose {
        width: 820px;
        max-width: calc(100vw - 2em);
        margin: 3rem auto 0 auto;
        padding: 2.5rem 2rem 3rem 2rem;
        background: var(--bg-alt);
        border-radius: 20px;
        box-shadow: 0 2px 24px 0 #0008;
      }
      .hero-image {
        width: 100%;
        margin-bottom: 2rem;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 16px;
        box-shadow: 0 2px 24px 0 #0006;
        max-width: 100%;
        height: auto;
      }
      .post-title {
        font-size: 2.1rem;
        font-weight: 700;
        margin: 0 0 1.1rem 0;
        letter-spacing: -1px;
        color: var(--text);
      }
      .prose h2 {
        font-size: 1.4rem;
        font-weight: 600;
        margin: 2.1rem 0 1rem 0;
        line-height: 1.22;
      }
      .prose h3 {
        font-size: 1.13rem;
        font-weight: 600;
        margin: 1.7rem 0 0.8rem 0;
        line-height: 1.22;
      }
      .date {
        font-size: 1.08rem;
        color: #ff6363;
        margin-bottom: 1.2rem;
        margin-top: -0.5rem;
        font-weight: 500;
      }
      a {
        color: #ff6363;
        text-decoration: none;
        transition: color 0.2s;
      }
      a:hover, a:focus {
        color: var(--accent-hover);
        text-decoration: underline;
      }
      hr {
        border: none;
        border-top: 1px solid #444;
        margin: 2.5rem 0 2rem 0;
      }
    </style>
  </head>
  <body>
    <main>
      <article class="prose">
        {heroImage && (
          <div class="hero-image">
            <img width={1020} height={510} src={heroImage} alt="" />
          </div>
        )}
        <div class="date">
          <FormattedDate date={pubDate} />
          {updatedDate && (
            <span style="font-size: 0.98em; color: #aaa; font-style: italic; margin-left: 1em;">(Updated <FormattedDate date={updatedDate} />)</span>
          )}
        </div>
        <h1 class="post-title">{title}</h1>
        <hr />
        <slot />
      </article>
    </main>
  </body>
</html>
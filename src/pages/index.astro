---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      html,
      body {
        background: #181818;
        color: #f3f3f3;
        font-family: "Inter", sans-serif;
        margin: 0;
        padding: 0;
      }
      main {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem 1rem 3rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }
      .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        margin-bottom: 1.2rem;
        background: #232323;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
      }
      .profile-img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        display: block;
      }
      h1 {
        font-size: 2.3rem;
        font-weight: 700;
        margin: 0 0 0.2rem 0;
        letter-spacing: -1px;
      }
      .social {
        display: flex;
        gap: 0.7rem;
        margin-bottom: 1.4rem;
      }
      .social a {
        color: #f3f3f3;
        opacity: 0.7;
        transition: opacity 0.2s;
        font-size: 1.35rem;
      }
      .social a:hover {
        opacity: 1;
        color: #ff6363;
      }
      .intro {
        font-size: 1.1rem;
        color: #d0d0d0;
        margin-bottom: 1rem;
        text-align: left;
        max-width: 480px;
      }
      .posts-list {
        width: 100%;
        margin: 0;
        padding: 0;
        list-style: none;
      }
      .posts-list li {
        margin-bottom: 1.7rem;
      }
      .posts-list a {
        color: #ff6363;
        text-decoration: none;
        font-size: 1.16rem;
        font-weight: 500;
        transition: color 0.2s;
      }
      .posts-list a:hover {
        color: #fff;
        text-decoration: underline;
      }
      .posts-list .date {
        font-size: 0.98rem;
        color: #888;
        margin-top: 0.2rem;
      }
    </style>
  </head>
  <body>
    <main>
      <div class="avatar">
        <img
          src="/saturn.png"
          alt="Å imon SotÃ¡k Gregor profile photo"
          class="profile-img"
          width="120"
          height="120"
        />
      </div>
      <h1>Å imon SotÃ¡k Gregor</h1>
      <div class="social">
        <a
          href="https://github.com/the21st"
          aria-label="GitHub"
          target="_blank"
          rel="noopener"
        >
          <svg
            width="22"
            height="22"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path

---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      :root {
        --bg: #181818;
        --bg-alt: #232323;
        --text: #f3f3f3;
        --accent: #ff6363;
      }
      @media (prefers-color-scheme: light) {
        :root {
          --bg: #fff;
          --bg-alt: #f6f6f6;
          --text: #232323;
          --accent: #e14b1e;
        }
      }
      html,
      body {
        background: var(--bg);
        color: var(--text);
        font-family: "Inter", sans-serif;
        margin: 0;
        padding: 0;
      }
      main {
        max-width: 500px;
        margin: 0 auto;
        padding: 2rem 1rem 3rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }
      .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        margin-bottom: 1.2rem;
        background: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
      }
      .profile-img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        display: block;
      }
      h1 {
        font-size: 2.3rem;
        font-weight: 700;
        margin: 0 0 0.2rem 0;
        letter-spacing: -1px;
      }
      .social {
        display: flex;
        gap: 0.7rem;
        margin-bottom: 1.4rem;
      }
      .social a {
        color: var(--accent);
        opacity: 0.75;
        transition:
          color 0.2s,
          opacity 0.2s;
        font-size: 1.35rem;
      }
      .social a:hover {
        opacity: 1;
      }
      .intro {
        font-size: 1.1rem;
        color: var(--text);
        opacity: 0.92;
        margin-bottom: 1rem;
        text-align: left;
      }
      .a {
        color: var(--accent);
        text-decoration: underline;
      }
      .posts-list {
        width: 100%;
        margin: 0;
        padding: 0;
        list-style: none;
      }
      a {
        color: #ff6363;
        text-decoration: none;
        transition: color 0.2s;
      }
      a:hover,
      a:focus {
        text-decoration: underline;
      }
      .posts-list a {
        font-size: 1.16rem;
        font-weight: 500;
      }
      .posts-list .date {
        font-size: 0.98rem;
        color: #888;
        margin-top: 0.2rem;
      }
    </style>
  </head>
  <body>
    <main>
      <Header />
      <div class="intro">Hey there! I'm Å imon ðŸ‘‹</div>
      <div class="intro">
        Currently I'm helping build great biotech software at <a
          rel="nofollow"
          href="https://invertbio.com">Invert</a
        >.
      </div>
      <div class="intro">
        I'm a video game enthusiast, amateur pianist, and effective altruism
        fan. I studied computer science with focus on computer graphics before
        working at two game studios. Found I enjoy startups, spending 5 years at
        Represent where I built
        <a href="https://separo.io">Separo</a>. Most recently, I spent 5 years
        as a founding engineer at Deepnote.
      </div>
      <div class="intro">Here's some of my writing:</div>
      <ul class="posts-list">
        {
          posts.map((post) => (
            <li>
              <a href={`/blog/${post.id}/`}>{post.data.title}</a>
              <div class="date">
                <FormattedDate date={post.data.pubDate} />
              </div>
            </li>
          ))
        }
      </ul>
    </main>
  </body>
</html>
